# ============================================================================
# ArgusTrader Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# ============================================================================

# ============================================================================
# API Keys - Market Data & Trading
# ============================================================================

# Polygon.io - Real-time market data
# Get your key at: https://polygon.io/
POLYGON_API_KEY=your_polygon_api_key_here

# Alpaca Markets - Trading & Paper Trading
# Get your keys at: https://alpaca.markets/
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_PAPER=true

# ============================================================================
# API Keys - News & Sentiment
# ============================================================================

# NewsAPI - News aggregation
# Get your key at: https://newsapi.org/
NEWSAPI_KEY=your_newsapi_key_here

# Benzinga - Premium news (optional)
# BENZINGA_API_KEY=your_benzinga_key_here

# Alpha Vantage - Backup data source (optional)
# ALPHAVANTAGE_API_KEY=your_alphavantage_key_here

# ============================================================================
# Database Configuration
# ============================================================================

DB_USER=argus
DB_PASSWORD=your_secure_password_here
DB_NAME=argus_trader
DB_HOST=localhost
DB_PORT=5432

# Full connection string (alternative to individual settings)
# DATABASE_URL=postgresql://argus:password@localhost:5432/argus_trader

# ============================================================================
# Redis Configuration
# ============================================================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Full connection string (alternative)
# REDIS_URL=redis://localhost:6379/0

# ============================================================================
# Grafana (Monitoring)
# ============================================================================

GRAFANA_USER=admin
GRAFANA_PASSWORD=your_grafana_password_here

# ============================================================================
# Dashboard Configuration
# ============================================================================

DASH_DEBUG=false
DASH_HOST=0.0.0.0
DASH_PORT=8050

# ============================================================================
# Engine Configuration
# ============================================================================

# ZeroMQ endpoints
ZMQ_PUB_ENDPOINT=tcp://*:5555
ZMQ_SUB_ENDPOINT=tcp://*:5556

# Logging
LOG_LEVEL=INFO
LOG_DIR=./logs

# ============================================================================
# Trading Configuration
# ============================================================================

# Risk limits
MAX_POSITION_PCT=0.10
MAX_DAILY_LOSS_PCT=0.02
MAX_TOTAL_EXPOSURE=0.80

# Trading mode: paper | live
TRADING_MODE=paper

# ============================================================================
# Model Configuration
# ============================================================================

# Path to TensorRT engines
MODEL_DIR=./models
TFT_ENGINE_PATH=./models/tensorrt/tft_predictor.engine
FINBERT_ENGINE_PATH=./models/tensorrt/finbert.engine

# ============================================================================
# Development Settings
# ============================================================================

# Set to true for development mode
DEV_MODE=false

# Enable profiling
ENABLE_PROFILING=false
